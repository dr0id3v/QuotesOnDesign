<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/material_activity_horizontal_padding"
  android:layout_marginLeft="@dimen/material_activity_horizontal_padding"
  android:layout_marginEnd="@dimen/material_activity_horizontal_padding"
  android:layout_marginRight="@dimen/material_activity_horizontal_padding"
  app:cardUseCompatPadding="true"
  app:cardPreventCornerOverlap="false">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
      layout="@layout/quote"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/quote_card_padding"
      android:layout_marginLeft="@dimen/quote_card_padding"
      android:layout_marginRight="@dimen/quote_card_padding"
      android:layout_marginStart="@dimen/quote_card_padding"
      android:layout_marginEnd="@dimen/quote_card_padding"/>

    <Button
      android:id="@+id/btRemove"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_margin="@dimen/material_card_action_margin"
      android:background="@null"
      android:text="@string/remove"/>

  </LinearLayout>

</android.support.v7.widget.CardView>
